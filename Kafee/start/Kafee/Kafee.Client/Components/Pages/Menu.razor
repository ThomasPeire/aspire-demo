@page "/menu"
@rendermode InteractiveServer

@inject KafeeApiClient KafeeApi

<PageTitle>Menu</PageTitle>

<h1>Menu</h1>

@if (!string.IsNullOrEmpty(feedbackMessage))
{
    <div class="alert alert-success">@feedbackMessage</div>
}

@if (menu == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menuItem in menu)
            {
                <tr>
                    <td>@menuItem.Name</td>
                    <td>@menuItem.Price</td>
                    <td>@menuItem.AmountInStock</td>
                    <td>
                        <button class="btn btn-primary btn-sm" 
                                @onclick="() => Order(menuItem.Id)"
                                disabled="@(!menuItem.Available)">
                            @if (menuItem.Available)
                            {
                                <i class="bi bi-cart-plus me-1"></i>
                                <text>Bestel</text>
                            }
                            else
                            {
                                <i class="bi bi-x-circle me-1"></i>
                                <text>Uitverkocht</text>
                            }
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private MenuItem[]? menu;
    private string? feedbackMessage;

    protected override async Task OnInitializedAsync()
    {
        menu = await KafeeApi.GetMenuAsync();
    }
    
    private async Task Order(int menuItemId)
    {
        try
        {
            await KafeeApi.OrderAsync(menuItemId);
            feedbackMessage = "Order placed successfully!";
        }
        catch (HttpRequestException ex)
        {
            feedbackMessage = $"Failed to place order: {ex.Message}";
        }
        catch (Exception ex)
        {
            feedbackMessage = $"An error occurred: {ex.Message}";
        }
        StateHasChanged();
    }
}
